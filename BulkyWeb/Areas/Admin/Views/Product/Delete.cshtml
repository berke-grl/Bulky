@model Product

<h1 class="pb-3">Are You Sure Want to Delete This Product</h1>

<form method="post">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Author
                </th>
                <th>
                    Description
                </th>
                <th>
                    ListPrice
                </th>
                <th>
                    ISBN
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Title</td>
                <td>@Model.Author</td>
                <td>@Model.Description</td>
                <td>@Model.ListPrice</td>
                <td>@Model.ISBN</td>
            </tr>
        </tbody>
    </table>
    <div class="row pt-3">
        <div class="col-6">
            <button type="submit" class="btn btn-danger form-control">Delete</button>
        </div>
        <div class="col-6">
            <a asp-controller="Product" asp-action="Index" class="btn btn-secondary btn-outline border form-control"> Back To List</a>
        </div>
    </div>
</form>